{
    "name": "nrundemo",
    "version": "0.0.1",
    "description": "Demo for a simple node.js script runner",
    "scripts": {
        "run": "go run main.go",
        "build": "make local",
        "build-all": "make all",
        "build-local": "make local",
        "build-util": "make util",
        "hello": "./nrun hello",
        "test": "go test ./...",
        "test-verbose": "go test -v ./...",
        "test-coverage": "go test -coverprofile=coverage.out ./... && go tool cover -html=coverage.out",
        "test-coverage-verbose": "go test -v -coverprofile=coverage.out ./... && go tool cover -html=coverage.out"
    }
}